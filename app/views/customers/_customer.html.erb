
<div class="card" style="max-width: 400px; margin: 10px;">
  <div class="card-content">
    <div class="media">
      <h2><%= customer.full_name %></h2><br>
      <div class="media-image">
        <%= image_tag url_for(customer.image), alt: "#{customer.full_name}'s Image", class: "is-rounded" %>
      </div><br>
    </div>

    <div class="content">

    <strong>Phone:</strong> <%= customer.phone_number %><br><br><br>
    <strong>Email:</strong> <%= customer.email %><br><br><br>
    <strong>Note:</strong> <%= customer.notes %>
    </div>
  </div>
</div>
